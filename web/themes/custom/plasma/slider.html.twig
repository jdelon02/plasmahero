<div data-delay="3000" data-animation="slide" data-autoplay="1" data-duration="1000" data-infinite="1" class="slider w-slider">
        <div class="slide-mask w-slider-mask">
		{% for news in newsslides %}
          <div class="slide w-slide">
            <div class="news-card news-1">
              <div class="news-card-image news-image-1" style="background-image:url({{news.img|image_style('newsbg')}});">
                <div class="news-slide-overlay"></div>
              </div>
              <div class="avatar-container">
			  {% if news.icon %}
			  	<div class="avatar avatar-default" style="background-image:url({{ news.icon|image_style('thumbnail') }})"></div>
			  {% else %}
			  	<div class="avatar avatar-default"></div>
			  {% endif %}
                
              </div>
              <div class="news-slide-text-container">
                <h4 class="heading-4">{{ news.title }}</h4>
                <p class="caption-text">{{ news.name }}</p>
				<p class="caption-text">{{ news.date|date('m/d/Y') }}</p>
                <div class="news-slide-paragraph">{{news.summary}}</div>
				<a href="{{ path('entity.node.canonical', {'node': news.nid})}}" class="button w-button">Read More</a></div>
            </div>
          </div>
		  {% endfor %}
        </div>
        <div class="left-arrow w-slider-arrow-left">
          <div class="icon-2 w-icon-slider-left"></div>
        </div>
        <div class="right-arrow w-slider-arrow-right">
          <div class="icon-3 w-icon-slider-right"></div>
        </div>
        <div class="slide-nav-2 w-slider-nav"></div>
      </div>